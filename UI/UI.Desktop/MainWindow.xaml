<Window x:Class="UI.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Desktop"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" 
        Height="450" Width="800" 
        DataContext="{Binding Main, Source={StaticResource Locator}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="tbTitle" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Width="100" Height="30" FontSize="16" Text="{Binding WindowTitle, Mode=TwoWay}"/>
        <Button x:Name="btnSave" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="20,0" Width="80" Height="30" Content="Speichern" Command="{Binding Save}"/>
        <Button x:Name="btnLogin" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" HorizontalAlignment="Center" Width="100" Content="Login" Height="30" Click="btnLogin_Click"/>
    </Grid>
</Window>
